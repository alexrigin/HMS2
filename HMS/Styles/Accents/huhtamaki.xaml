	<SolidColorBrush x:Key="AccentColorBrush" Color="{StaticResource DarkBlueColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="AccentColorBrush2" Color="{StaticResource BlueColor}" options:Freeze="True"/>
	<SolidColorBrush x:Key="AccentColorBrush3" Color="{StaticResource TurquoiseColor}" options:Freeze="True" Opacity="0.8"/>
	<SolidColorBrush x:Key="AccentColorBrush4" Color="{StaticResource MediumGrayColor}" options:Freeze="True" />


	<SolidColorBrush x:Key="DarkBlueColorBrush" Color="{StaticResource DarkBlueColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="BlueColorBrush" Color="{StaticResource BlueColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="BlueColor2Brush" Color="{StaticResource BlueColor2}" options:Freeze="True" />
	<SolidColorBrush x:Key="TurquoiseColorBrush" Color="{StaticResource TurquoiseColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="DarkPurpleColorBrush" Color="{StaticResource DarkPurpleColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="MediumGrayCololorBrush" Color="{StaticResource MediumGrayColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="LightGrayColorBrush" Color="{StaticResource LightGrayColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="LightGrayColor2Brush" Color="{StaticResource LightGrayColor2}" options:Freeze="True" />
	<SolidColorBrush x:Key="HighLightGrayColorBrush" Color="{StaticResource HighLightGrayColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="HighLightGrayColor2Brush" Color="{StaticResource HighLightGrayColor2}" options:Freeze="True" />
	<SolidColorBrush x:Key="HighLightGrayColor3Brush" Color="{StaticResource HighLightGrayColor3}" options:Freeze="True" />
	
	
	<SolidColorBrush x:Key="WindowTitleColorBrush" Color="{StaticResource DarkBlueColor}" options:Freeze="True" />

	<LinearGradientBrush x:Key="ProgressBrush" EndPoint="0.001,0.5" StartPoint="1.002,0.5" options:Freeze="True">
		<GradientStop Color="{StaticResource HighlightColor}" Offset="0" />
		<GradientStop Color="{StaticResource AccentColor3}" Offset="1" />
	</LinearGradientBrush>

	<SolidColorBrush x:Key="CheckmarkFill" Color="{StaticResource AccentColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="RightArrowFill" Color="{StaticResource AccentColor}" options:Freeze="True" />

	<Color x:Key="IdealForegroundColor">White</Color>
	<SolidColorBrush x:Key="IdealForegroundColorBrush" Color="{StaticResource IdealForegroundColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="IdealForegroundDisabledBrush" Color="{StaticResource IdealForegroundColor}" Opacity="0.4" options:Freeze="True" />
	<SolidColorBrush x:Key="AccentSelectedColorBrush" Color="{StaticResource IdealForegroundColor}" options:Freeze="True" />

	<!-- DataGrid brushes -->
	<SolidColorBrush x:Key="MetroDataGrid.HighlightBrush" Color="{StaticResource TurquoiseColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="MetroDataGrid.HighlightTextBrush" Color="White" options:Freeze="True" />
	<SolidColorBrush x:Key="MetroDataGrid.MouseOverHighlightBrush" Color="{StaticResource TurquoiseColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="MetroDataGrid.FocusBorderBrush" Color="{StaticResource BlueColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="MetroDataGrid.InactiveSelectionHighlightBrush" Color="{StaticResource IdealForegroundColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="MetroDataGrid.InactiveSelectionHighlightTextBrush" Color="{StaticResource IdealForegroundColor}" options:Freeze="True" />

	<!-- ListView brushes -->
	<!-- Background & Foreground -->
	<SolidColorBrush x:Key="LVItemBackgroundColorBrush" Color="{StaticResource TurquoiseColor}" options:Freeze="True" Opacity="0.2"/>
	<SolidColorBrush x:Key="LVItemAlternativeBackgroundColorBrush" Color="{StaticResource BlueColor}" options:Freeze="True" Opacity="0.1"/>
	<SolidColorBrush x:Key="LVItemForeGroundColorBrush" Color="Black" options:Freeze="True" />
	<!-- Selected -->
	<SolidColorBrush x:Key="LVItem_Selected_BackgroundColorBrush" Color="{StaticResource BlueColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="LVItem_Selected_ForegroundColorBrush" Color="White" options:Freeze="True" />
	<!-- MouseOver -->
	<SolidColorBrush x:Key="LVItem_MouseOver_BackgroundColorBrush" Color="{StaticResource TurquoiseColor}" options:Freeze="True" />
	<SolidColorBrush x:Key="LVItem_MouseOver_ForegroundColorBrush" Color="White" options:Freeze="True" />
	<!-- Selected And MouseOver -->
	<SolidColorBrush x:Key="LVItem_Selected_and_MouseOver_BackgroundColorBrush" Color="Red" options:Freeze="True" />
	<SolidColorBrush x:Key="LVItem_Selected_and_MouseOver_ForegroundColorBrush" Color="White" options:Freeze="True" />



