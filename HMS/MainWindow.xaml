            <TabItem Header="Высота">
                <Grid Background="#FFE5E5E5"/>
                
            </TabItem>
            <TabItem Header="Высота закатки">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Диаметр">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="-158,-104,0,0" VerticalAlignment="Top" Width="74"/>



    </Grid>
</Window>
